{
  "name": "acordeon",
  "version": "1.1.0",
  "description": "A dead simple animated collapse for JS",
  "module": "dist/main.js",
  "scripts": {
    "start": "npm-run-all --parallel serve build:watch",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:dev build:prod",
    "build:watch": "webpack --watch --progress --mode=development --config webpack.dev.babel.js",
    "build:prod": "cross-env NODE_ENV=production webpack -p --config webpack.prod.babel.js",
    "build:dev": "webpack --mode=development --config webpack.dev.babel.js",
    "serve": "serve ./",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint --fix 'src/**/*.js'",
    "lint:format": "prettier --write 'src/**/*.js'",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test:watch": "cross-env NODE_ENV=test mocha --watch",
    "validate": "npm-run-all --parallel lint test build"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 99,
    "functions": 99,
    "instrument": false,
    "sourceMap": false,
    "require": [
      "ignore-styles",
      "@babel/register",
      "jsdom-global/register"
    ],
    "include": [
      "src"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/afk-mcz/acordeon.git"
  },
  "keywords": [
    "vanilla-js",
    "collapse"
  ],
  "author": "Mario Carballo Zama",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/afk-mcz/acordeon/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/afk-mcz/acordeon#readme",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-syntax-export-default-from": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-istanbul": "^5.1.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "eslint": "^5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "^13.2.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.5.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.16.4",
    "serve": "^10.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-merge": "^4.2.1"
  }
}
